{
  "name": "pug-ts-scss-boilerplate",
  "version": "1.0.0",
  "description": "A frontend starter package using pug, typescript, and scss",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-prod": "npm run svgSprite && cross-env NODE_ENV=production webpack",
    "build-dev": "npm run svgSprite cross-env NODE_ENV=development && webpack",
    "dev": "npm run svgSprite && cross-env NODE_ENV=none webpack serve",
    "lint": "eslint \"*/**/*.{js,ts,tsx}\" --quiet --fix",
    "lint:scss": "stylelint \"*/**/*.{scss,sass}\" --quiet --fix",
    "svgSprite": "node ./src/utils/generateSvgSprite.ts"
  },
  "author": "Anton Chernous",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "echo \"[Husky] pre-commit\" && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/**/*.pug": [
      "prettier --write"
    ],
    "src/**/**/*.scss": [
      "stylelint --syntax scss --fix"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@prettier/plugin-pug": "^1.16.3",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/mini-css-extract-plugin": "^2.0.1",
    "@types/node": "^16.4.13",
    "@types/svg-sprite": "0.0.33",
    "@types/webpack-dev-server": "^3.11.5",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "acorn": "^8.4.1",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "babel-loader-exclude-node-modules-except": "^1.2.1",
    "chokidar": "^3.5.2",
    "compression-webpack-plugin": "^8.0.1",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "cssnano": "^5.0.7",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-webpack-plugin": "^3.0.1",
    "glob": "^7.1.7",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^4.3.8",
    "lint-staged": "^11.1.2",
    "mini-css-extract-plugin": "^2.2.0",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.3.2",
    "pug-html-loader": "^1.1.5",
    "sass": "^1.38.0",
    "sass-loader": "^12.1.0",
    "source-map-loader": "^3.0.0",
    "style-loader": "^3.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "svg-sprite": "^1.5.1",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "^7.15.3",
    "core-js": "^3.16.1",
    "glob-parent": "^6.0.1",
    "pug": "^3.0.2",
    "regenerator-runtime": "^0.13.9",
    "xmldom": "^0.6.0"
  }
}
